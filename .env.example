# ==============================================
# WEALTHWISE AI - ENVIRONMENT CONFIGURATION
# ==============================================

# Environment
NODE_ENV=development

# Application
APP_NAME=WealthWise AI
APP_URL=http://localhost:3000

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wealthwise_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_DIALECT=postgres
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_REFRESH_EXPIRY=30d

# API Configuration
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
AI_SERVICE_URL=http://localhost:8000

# AI Service Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Alternative LLM (Optional)
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIR=./data/chromadb

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@wealthwise.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000

# Session
SESSION_SECRET=your_session_secret_change_in_production

# Feature Flags
ENABLE_AI_ADVISOR=true
ENABLE_INVESTMENT_RECOMMENDATIONS=true
ENABLE_BILL_REMINDERS=true

# External APIs (Optional)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# AWS Configuration (Production)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Encryption
ENCRYPTION_KEY=your_32_char_encryption_key_here
